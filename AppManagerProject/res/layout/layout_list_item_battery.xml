<?xml version="1.0" encoding="utf-8"?>
<!-- ManageApps memory list item -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="15dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="15dp"
    android:id="@+id/ll_container">

    <com.tcl.manager.view.CornerImageView
        android:id="@+id/iv_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/ic_default" />

    <LinearLayout

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:ellipsize="marquee"
            android:gravity="top"
            android:singleLine="true"
            android:textColor="@color/fragment_list_item_text1_color"
            android:textSize="@dimen/app_text_size_17sp" />

        <TextView
            android:id="@+id/tv_desc1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:textColor="@color/fragment_list_item_text2_color"
            android:textSize="@dimen/app_text_size_14sp" />

        <TextView
            android:id="@+id/tv_desc2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:ellipsize="marquee"
            android:gravity="bottom"
            android:singleLine="true"
            android:textColor="@color/fragment_list_item_text2_color"
            android:textSize="@dimen/app_text_size_14sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:src="@drawable/app_detail_toggle_sel" />

</LinearLayout>