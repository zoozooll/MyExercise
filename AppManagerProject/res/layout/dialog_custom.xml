<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="26dp"
        android:singleLine="true"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/optimized_textcolor_title"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/dialog_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:text="ifyourjwefnwelfnweklfnweklfnwelkfnweklnflweknflkwenfklwenfwklenfklnwelfnwelkfn"
        android:textColor="@color/dialog_textcolor_msg"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/dialog_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingTop="10dp"
        android:text="Do you confirm to turn it off?"
        android:textColor="@color/dialog_textcolor_msg"
        android:textSize="14sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:paddingTop="30dp" >

        <TextView
            android:id="@+id/dialog_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:text="@string/dialog_default_right_button"
            android:textColor="@color/app_detail_text3_color"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/dialog_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="22dp"
            android:layout_toLeftOf="@id/dialog_right"
            android:singleLine="true"
            android:text="@string/dialog_default_left_button"
            android:textColor="@color/fragment_list_item_text1_color"
            android:textSize="17sp" />
    </RelativeLayout>

</LinearLayout>