<?xml version="1.0" encoding="utf-8"?>
<!-- ManageApps memory list item -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="15dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="15dp"
    android:id="@+id/ll_container">

    <com.tcl.manager.view.CornerImageView
        android:id="@+id/iv_icon"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_default" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:ellipsize="marquee"
            android:gravity="top"
            android:singleLine="true"
            android:textColor="@color/fragment_list_item_text1_color"
            android:textSize="@dimen/app_text_size_17sp" />

        <TextView
            android:id="@+id/tv_desc1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:textColor="@color/fragment_list_item_text2_color"
            android:textSize="@dimen/app_text_size_14sp" />

        <TextView
            android:id="@+id/tv_desc2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:ellipsize="marquee"
            android:gravity="bottom"
            android:singleLine="true"
            android:textColor="@color/fragment_list_item_text2_color"
            android:textSize="@dimen/app_text_size_14sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_switch"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:background="@drawable/shape_btn2_sel"
        android:gravity="center"
        android:minWidth="75dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/app_btn_text_uninstall"
        android:textColor="@color/fragment_list_item_text3_color"
        android:textSize="@dimen/app_text_size_14sp" />

</LinearLayout>