<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <View
        android:id="@+id/main_score_circle_outside"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_score_circle_outside"
        android:visibility="invisible" />

    <com.tcl.manager.view.ColorRound
        android:id="@+id/view_color_round"
        android:layout_width="215dp"
        android:layout_height="215dp"
        android:layout_centerInParent="true"
        android:background="@color/main_good" />

    <com.tcl.manager.view.WhiteShadeAnnulus
        android:id="@+id/main_whiteshareannulus"
        android:layout_width="210dp"
        android:layout_height="210dp"
        android:layout_centerInParent="true" />

    <RelativeLayout
        android:id="@+id/main_score_circle_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:background="@drawable/selector_main_circle" >

        <com.tcl.manager.view.RiseNumberTextView
            android:id="@+id/main_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="99"
            android:textColor="@color/main_good"
            android:textSize="90sp" />

        <TextView
            android:id="@+id/main_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="30dp"
            android:textColor="@color/main_good"
            android:textSize="16sp" />
    </RelativeLayout>

</RelativeLayout>