<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include
        android:id="@+id/ll_header"
        layout="@layout/layout_header_action_bar" />
    
    <com.tcl.manager.view.PagerSlidingTabStrip
        android:layout_below="@id/ll_header"
        android:id="@+id/managerlist_tabs"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:background="#374247" 
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/managerlist_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/managerlist_tabs"
        />


</RelativeLayout>