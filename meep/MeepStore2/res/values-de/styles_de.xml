<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="text_sortbycategory" parent="wrap_content">
        <item name="android:textColor">@color/text_dark_green</item>  
	    <item name="android:textSize">17dp</item>  
	    <item name="android:textStyle">bold</item>  
	    <item name="android:layout_marginRight">30dp</item>  
	    <item name="android:layout_alignParentRight">true</item>  
	    <item name="android:layout_centerVertical">true</item> 
	    <item name="android:gravity">center_horizontal</item> 
    </style>
    
    <style name="text_menu_myapps" parent="text_menu">
        <item name="android:textSize">25dp</item>
        <item name="android:textColor">@color/text_orange_trans</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>
    <style name="text_menu_media" parent="text_menu">
        <item name="android:textSize">22dp</item>
        <item name="android:layout_weight">0.8</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>
    <style name="text_menu_game" parent="text_menu">
        <item name="android:textSize">30dp</item>
    </style>
    <style name="text_menu_apps" parent="text_menu">
        <item name="android:textSize">25dp</item>
    </style>
    <style name="text_menu_ebook" parent="text_menu">
        <item name="android:textSize">30dp</item>
    </style>
    <style name="myapps_list_button" parent="wrap_content">
        <item name="android:background">@drawable/btn_common_myapps</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
    <style name="text_item_button" parent="wrap_content">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
    </style>
</resources>