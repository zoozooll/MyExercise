<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:gravity="center_horizontal"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    >
    <ImageView android:id="@+id/plus"
        style="@style/wrap_content"
        android:src="@drawable/meep_store_plus"
        android:layout_marginTop="80dp"
        />
    <RelativeLayout 
        android:layout_marginTop="12dp"
        style="@style/wrap_content"
        android:id="@+id/coupon_image"
        android:layout_marginLeft="30dp"
        android:layout_width="170dp"
	    android:layout_height="170dp"
        >
	    <ImageView
	        android:layout_width="112dp"
	        android:layout_height="112dp"
	        android:scaleType="centerCrop"
	        android:id="@+id/image"
	        android:contentDescription="@string/item"
	        android:layout_centerInParent="true"
	        />
	    <ImageView
	        android:id="@+id/imageblock"
	        style="@style/image_myapp"
	        android:src="@drawable/meep_market_description_block"
	        android:contentDescription="@string/item"
	        android:layout_marginLeft="-3dp"
	        />
    </RelativeLayout>
    <TextView 
        android:id="@+id/textName"
        style="@style/wrap_content"
        android:gravity="center"
        android:singleLine="true"
        android:maxWidth="180dp"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/text_dark_blue2"
        android:layout_marginTop="-15dp"
        android:text="@string/app_name"
        android:marqueeRepeatLimit="marquee_forever"
        android:layout_below="@id/coupon_image"
        android:layout_marginLeft="60dp"
        />
</RelativeLayout>