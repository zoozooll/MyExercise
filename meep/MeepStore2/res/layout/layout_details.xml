<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@color/background_half_trans2">
    <LinearLayout 
        style="@style/fill_parent"
        android:background="@drawable/meep_market_descriptionpopup"
        android:orientation="vertical"
        android:padding="40dp">
        <RelativeLayout
		    android:layout_width="fill_parent"
		    android:layout_height="0.0dip"
		    android:layout_weight="7">
		    <RelativeLayout 
		        style="@style/wrap_content"
		        android:layout_marginLeft="3dp"
		        android:id="@+id/icon"
		        android:visibility="invisible">
			    <ImageView
			        android:layout_width="142dp"
			        android:layout_height="142dp"
			        android:scaleType="centerCrop"
			        android:id="@+id/image"
			        android:contentDescription="@string/item"
			        android:layout_marginRight="3dp"
			        android:layout_centerInParent="true"
			        />
		        <ImageView
			        android:id="@+id/imageblock"
			        style="@style/wrap_content"
			        android:src="@drawable/meep_market_description_block"
			        android:contentDescription="@string/item"
			        android:layout_marginRight="3dp"
			        />
		        <ImageView
			        android:id="@+id/badge"
			         style="@style/wrap_content"
			        android:src="@drawable/meep_accessary"
			        android:contentDescription="@string/item"
			        android:scaleType="fitCenter"
			        android:layout_marginTop="14dp"/>
		    </RelativeLayout>
		    <RelativeLayout 
		        style="@style/wrap_content"
		        android:layout_marginLeft="3dp"
		        android:id="@+id/icon2"
		        android:visibility="invisible">
			    <ImageView
			        android:layout_width="123dp"
			        android:layout_height="160dp"
			        android:scaleType="centerCrop"
			        android:id="@+id/imagebook"
			        android:contentDescription="@string/item"
			        android:layout_marginRight="3dp"
			        android:layout_centerInParent="true"
			        />
		        <ImageView
			        android:id="@+id/imageblockbook"
			        style="@style/wrap_content"
			        android:src="@drawable/meep_market_book_block"
			        android:contentDescription="@string/item"
			        android:layout_marginRight="3dp"
			        android:layout_marginLeft="2dp"
			        />
		        <ImageView
			        android:id="@+id/badgebook"
			         style="@style/wrap_content"
			        android:src="@drawable/meep_accessary"
			        android:contentDescription="@string/item"
			        android:scaleType="fitCenter"
			        android:layout_marginTop="14dp"/>
		    </RelativeLayout>
		    <TableRow style="@style/fill_parent"
		        android:layout_alignTop="@id/icon"
		        android:layout_toRightOf="@id/icon"
		        >
			    <LinearLayout 
			        android:layout_height="wrap_content"	
		            android:layout_width="0.0dip"
			        android:orientation="vertical"
			        android:layout_weight="15"
			        android:layout_gravity="center"
			        android:layout_marginRight="-80dp"
			        >
			        <TextView style="@style/wrap_content"
			            android:layout_marginTop="15dp"
			            android:id="@+id/textName"
			            android:text="Name"
			            android:textColor="@color/text_dark_blue"
			            android:textSize="28dp"
			            />
			        <TextView style="@style/wrap_content"
			            android:id="@+id/textInfo"
			            android:text="infoinfoinfo"
			            android:textSize="22dp"
			            android:textColor="@color/text_dark_blue2"
			            />
			        <TextView style="@style/wrap_content"
			            android:id="@+id/textSize"
			            android:text="size"
			            android:textSize="22dp"
			            android:textColor="@color/text_dark_green"
			            />
			       <Button
			           android:id="@+id/button"
			           android:visibility="visible"
			            style="@style/text_item_button2"
			            android:background="@drawable/meep_market_blankbtn_normal"
			            android:text="@string/install"
			            android:textColor="@color/text_white" />
			       <ProgressBar
		                style="?android:attr/progressBarStyleHorizontal" 
		                android:id="@+id/progressBarDownload"
		                android:layout_width="450dp"
		                android:layout_height="35dp"
		                android:layout_marginTop="15dp"
		                android:max="100"
		                android:visibility="gone"/>
			    </LinearLayout>
			    <ImageView
			        android:id="@+id/recommend"
			        android:paddingTop="14dp"
			        android:layout_height="fill_parent"	
		            android:layout_width="0.0dip"
			        android:layout_weight="12"
			        android:src="@drawable/meep_store_gold"
			        android:scaleType="fitStart"
			        android:contentDescription="@string/app_name"
			        />
		    </TableRow>
		    
		
		</RelativeLayout>
		<com.oregonscientific.meep.store2.custom.scrollview.CustomScrollViewY
		    style="@style/ListViewStyle"
		    android:layout_height="0.0dip"
		    android:layout_width="fill_parent"
		    android:paddingLeft="10dp"
		    android:paddingRight="10dp"
		    android:layout_marginBottom="15dp"
		    android:isScrollContainer="true"
		    android:orientation="vertical"
		    android:layout_weight="8"
		    >
			<LinearLayout style="@style/fill_parent"
				android:orientation="vertical">
			    <LinearLayout
			        android:id="@+id/imagegroup"
			        android:layout_width="fill_parent" 
				 	android:layout_height="fill_parent"
					android:background="@drawable/meep_store_screenshotbar"
			        >
					<!-- <com.devsmart.android.ui.HorizontalListView
					    android:id="@+id/imagegroupList"
						android:layout_height="fill_parent"
						android:layout_width="wrap_content"
						/> -->
						<HorizontalScrollView 
						    android:id="@+id/horizontalScrollView"
						    style="@style/fill_parent"
						    android:layout_marginLeft="130dp"
						    android:layout_marginRight="130dp"
						    >
						    <LinearLayout
						        android:id="@+id/imagesLinear"
						        style="@style/fill_parent"
						        android:orientation="horizontal">
						    </LinearLayout>
						</HorizontalScrollView>
				</LinearLayout>
				<TextView 
				    style="@style/wrap_content"
				    android:textColor="@color/text_dark_blue"
				    android:textStyle="bold"
				    android:textSize="22dp"
				    android:text="@string/description"
				    android:paddingLeft="20dp"
				    android:layout_marginTop="20dp"
				    />
				<TextView
				    android:id="@+id/description"
				    style="@style/wrap_content"
				    android:textColor="@color/text_dark_blue"
				    android:textStyle="bold"
				    android:text="@string/descriptiontest"
				    android:textSize="18dp"
				    android:paddingLeft="20dp"
				    />
			</LinearLayout>
    	</com.oregonscientific.meep.store2.custom.scrollview.CustomScrollViewY>
		</LinearLayout>


</RelativeLayout>
