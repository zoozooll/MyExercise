<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="68dp"
    android:background="@color/background_trans"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical">
    <LinearLayout style="@style/fill_parent"
        android:layout_width="68dp"
        android:background="@color/item_bkg_icon"
        android:gravity="center"
        android:orientation="vertical">
    </LinearLayout>
    <ImageView style="@style/wrap_content"
        android:layout_height="28dp"
        android:layout_width="28dp"
        android:layout_margin="20dp"
        android:src="@drawable/plus"
        android:contentDescription="@string/main_page_account_add_new"/>
	<TextView 
		android:text="@string/main_page_account_add_new"
		android:id="@+id/addNew" 
		android:textStyle="bold"
		android:textSize="20dp"
		android:gravity="center"
		android:padding="0dp"
		style="@style/TextLogsInfo"/>
</LinearLayout>



    
    
