<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/fill_parent"
	android:orientation="horizontal"
	android:minHeight="64dp"
	android:gravity="center_vertical">
	<LinearLayout style="@style/wrap_content_horizontal"
        android:background="@color/item_bkg_icon"
        android:gravity="center_vertical">
	    <ImageView
	        android:id="@+id/category"
	        android:layout_width="48dp"
	        android:layout_height="48dp"
	        android:scaleType ="centerCrop"
	        android:layout_marginLeft="5dp"
	        android:layout_marginRight="5dp"
	        android:src="@drawable/log_meep_icon" 
	        android:contentDescription="@string/main_menu_icon"/>
    </LinearLayout>      
	<TextView 
	    style="@style/TextLogsInfo"
	    android:layout_width="wrap_content"
	    android:paddingLeft="10dp"
	    android:id="@+id/textLogsTime"
	    android:text="@string/main_text_time"/>
	<TextView 
	    style="@style/TextLogsInfo"
	    android:id="@+id/textLogsInfo"
	    android:paddingLeft="10dp"
	    android:text="@string/main_text_message"/>
</LinearLayout>
