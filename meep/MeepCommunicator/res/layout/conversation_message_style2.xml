<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.oregonscientific.meep.communicator.view.conversation.MessageBoxStyle2
        xmlns:messagebox="http://schemas.android.com/apk/res/com.oregonscientific.meep.communicator"
        xmlns:font="http://schemas.android.com/apk/res/com.oregonscientific.meep.communicator"
        android:layout_width="580dp"
        android:layout_height="wrap_content"
        android:paddingBottom="50dp"
        messagebox:bottomBackground="@drawable/message_box_bottom2"
        messagebox:contentBackground="@drawable/message_box_middle2"
        messagebox:topBackground="@drawable/message_box_up2" >

        <ImageView
            android:id="@+id/icon_border"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="405dp"
            android:layout_marginTop="30dp"
            android:background="@color/white" />

        <ImageView
            android:id="@+id/icon"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="410dp"
            android:layout_marginTop="35dp" />

        <com.oregonscientific.meep.communicator.view.CustomTextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/icon"
            android:layout_alignRight="@+id/icon"
            android:layout_marginTop="130dp"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="35dp"
            font:directory="Rumpelstiltskin.ttf" />

        <com.oregonscientific.meep.communicator.view.conversation.ConversationTextView
            android:id="@+id/message"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="45dp"
            android:minHeight="40dp"
            android:text="Message"
            android:textColor="@color/black"
            android:textSize="20dp" />
    </com.oregonscientific.meep.communicator.view.conversation.MessageBoxStyle2>

</RelativeLayout>