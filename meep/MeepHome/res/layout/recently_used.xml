<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:text="http://schemas.android.com/apk/res/com.oregonscientific.meep.home"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingRight="20dp"
    android:orientation="horizontal" >
    
	<RelativeLayout 
	    android:layout_marginTop="20dp"
	    android:layout_width="180dp"
	    android:layout_height="wrap_content"
	    android:paddingRight="5dp"
	    android:gravity="left" >
	    
	    <com.oregonscientific.meep.widget.OutlinedTextView
            android:id="@+id/menu_item_header_recently_used"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            text:font="MEEP.ttf"
            text:joinStyle="miter"
            text:outlineColor="#FFA42E14"
            text:outlineWidth="5"
            text:textColor="@android:color/white"
            text:textSize="28"
            text:maxLines="2"
            text:ellipsize="middle" />
	     
	</RelativeLayout>
       
    <ImageView
        android:id="@+id/menu_item_header_recently_used_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="25dp"
        android:paddingRight="25dp"
      />

</LinearLayout>