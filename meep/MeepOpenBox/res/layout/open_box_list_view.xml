<?xml version="1.0" encoding="utf-8"?>
<com.oregonscientific.meep.meepopenbox.view.CheckableLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom_font="http://schemas.android.com/apk/res/com.oregonscientific.meep.meepopenbox"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:padding="8dp" >

    <RelativeLayout
        android:id="@+id/item"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <com.oregonscientific.meep.meepopenbox.view.CustomTextView
            android:id="@+id/name"
            style="@style/OpenBoxListViewText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:paddingLeft="40dp"
            android:paddingRight="20dp"
            android:singleLine="true"
            android:text="@+id/name"
            custom_font:font_directory="fonts/Roboto-Bold.ttf" />
    </RelativeLayout>

</com.oregonscientific.meep.meepopenbox.view.CheckableLinearLayout>