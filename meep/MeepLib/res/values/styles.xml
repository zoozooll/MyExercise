<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="customfont_textview" parent="@android:style/Widget.TextView">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="customFont">fonts/Rumpelstiltskin.ttf</item>
    </style>
    <style name="customfont_edittext" parent="@android:style/Widget.EditText">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="customFont">fonts/Rumpelstiltskin.ttf</item>
    </style>
    <style name="customfont_button" parent="@android:style/Widget.Button">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="customFont">fonts/Rumpelstiltskin.ttf</item>
        
    </style>
    <style name="text" parent="customfont_textview">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">32sp</item>
        <item name="android:lineSpacingExtra">-3pt</item>
        
    </style>
    <style name="textshadow" parent="text">
        <item name="android:textColor">@android:color/white</item>
        <item name="strokeWidth">5</item>
        <item name="strokeColor">@color/shadowblue</item>
        <item name="strokeJoinStyle">round</item>
    </style>
    <style name="textshadow_blue" parent="textshadow">
        <item name="strokeColor">@color/shadowblue</item>
    </style>
    <style name="textshadow_yellow" parent="textshadow">
        <item name="strokeColor">@color/shadowyellow</item>
    </style>
    <style name="textshadow_red" parent="textshadow">
        <item name="strokeColor">@color/shadowred</item>
    </style>
    
    
    
    
    <style name="custom_font_textview" parent="@android:style/Widget.TextView">
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="customFont">fonts/Rumpelstiltskin.ttf</item>
    </style>
    <style name="text_shadow" parent="custom_font_textview">
        <item name="android:textColor">@android:color/white</item>
        <item name="strokeWidth">5.0</item>
        <item name="strokeColor">@color/shadowblue</item>
        <item name="strokeJoinStyle">round</item>
    </style>
    <style name="text_shadow_blue" parent="text_shadow">
        <item name="strokeColor">@color/shadow_blue</item>
    </style>
    <style name="text_shadow_yellow" parent="text_shadow">
        <item name="strokeColor">@color/shadow_yellow</item>
    </style>
    <style name="text_shadow_red" parent="text_shadow">
        <item name="strokeColor">@color/shadow_red</item>
    </style>
    <style name="text_shadow_greed" parent="text_shadow">
        <item name="strokeColor">@color/shadow_greed</item>
    </style>
    
    
    
    
    
     <style name="popup_button" parent="customfont_button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:textSize">50sp</item>
    </style>
    <style name="popup_textview" parent="customfont_textview">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:textSize">50sp</item>
    </style>
    <style name="popup_textview_title" parent="popup_textview">
    </style>
    <style name="popup_textview_message" parent="customfont_textview">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">50sp</item>
    </style>
    <style name="popup_textview_oth" parent="customfont_textview">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:textSize">50sp</item>
    </style>
</resources>