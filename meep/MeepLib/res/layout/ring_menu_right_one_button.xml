<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/one_button_right"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

        <ImageView
	        android:id="@+id/ring_menu_right"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="100px"
	        android:layout_marginTop="30px"
	        android:src="@drawable/ring_menu_ring_center_circle_bg" />
        
        <ImageView
	        android:id="@+id/ring_center"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="163px"
	        android:layout_marginTop="96px" />
        
        <ImageView
	        android:id="@+id/ring_menu_left_one"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="83px"
	        android:layout_marginTop="40px"
	        android:src="@drawable/ring_menu_left" />
        
        <ImageView
	        android:id="@+id/ring_menu_left_selection_one"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="65px"
	        android:layout_marginTop="42px"
	        android:src="@drawable/ring_menu_left_selection"
	        android:visibility="gone" />
        
        <ImageView
	        android:id="@+id/delete"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="115px"
	        android:layout_marginTop="97px"
	        android:src="@drawable/ring_delete" />
        
        <ImageView
	        android:id="@+id/delete_glow"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="115px"
	        android:layout_marginTop="97px"
	        android:src="@drawable/ring_delete_glow"
	        android:visibility="gone" />

</RelativeLayout>