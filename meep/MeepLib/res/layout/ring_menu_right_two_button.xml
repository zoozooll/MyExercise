<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/two_button_right"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

        <ImageView
	        android:id="@+id/ring_menu_right"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="100px"
	        android:layout_marginTop="30px"
	        android:src="@drawable/ring_menu_ring_center_circle_bg" />
        
        <ImageView
	        android:id="@+id/ring_center"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="163px"
	        android:layout_marginTop="96px" />
        
        <ImageView
	        android:id="@+id/ring_menu_top_left_two"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="84px"
	        android:layout_marginTop="13px"
	        android:src="@drawable/ring_menu_top_left_two" />
        
        <ImageView
	        android:id="@+id/ring_menu_bottom_left_two"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="84px"
	        android:layout_marginTop="97px"
	        android:src="@drawable/ring_menu_bottom_left_two" />
        
        <ImageView
	        android:id="@+id/ring_menu_top_left_selection_two"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="84px"
	        android:layout_marginTop="13px"
	        android:src="@drawable/ring_menu_top_left_selection_two"
	        android:visibility="gone" />
        
        <ImageView
	        android:id="@+id/ring_menu_bottom_left_selection_two"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="84px"
	        android:layout_marginTop="97px"
	        android:src="@drawable/ring_menu_bottom_left_selection_two"
	        android:visibility="gone" />
        
        <ImageView
	        android:id="@+id/rename"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="143px"
	        android:layout_marginTop="50px"
	        android:src="@drawable/ring_rename" />
        
        <ImageView
	        android:id="@+id/rename_glow"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="143px"
	        android:layout_marginTop="50px"
	        android:src="@drawable/ring_rename_glow"
	        android:visibility="gone"/>
        
        <ImageView
	        android:id="@+id/delete"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="145px"
	        android:layout_marginTop="142px"
	        android:src="@drawable/ring_delete" />
        
        <ImageView
	        android:id="@+id/delete_glow"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="145px"
	        android:layout_marginTop="142px"
	        android:src="@drawable/ring_delete_glow"
	        android:visibility="gone"/>

</RelativeLayout>