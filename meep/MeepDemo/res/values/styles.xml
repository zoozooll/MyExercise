<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="bar_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="bar_button_left">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="navigation_button">
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@null</item>
    </style>

    <style name="right_menu_button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:layout_weight">1</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="customfont_textview" parent="@android:style/Widget.TextView">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="customfont_edittext" parent="@android:style/Widget.EditText">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="customfont_button" parent="@android:style/Widget.Button">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="popup_button" parent="customfont_button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:textSize">50sp</item>
    </style>
    <style name="popup_textview" parent="customfont_textview">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="right_menu_title" parent="customfont_textview">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">32sp</item>
        
    </style>
    <style name="right_menu_title_shadow" parent="right_menu_title">
        <item name="android:textColor">@android:color/white</item>
        
    </style>
    <style name="right_menu_title_shadow_blue" parent="right_menu_title_shadow">
    </style>
    <style name="right_menu_title_shadow_yellow" parent="right_menu_title_shadow">
    </style>
    <style name="right_menu_title_shadow_red" parent="right_menu_title_shadow">
    </style>
</resources>