<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_background"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/b_web_bg"
    android:orientation="vertical" >

    <com.oregonscientific.meep.customfont.MyTextView
        android:id="@+id/content_title"
        style="@style/customfont_textview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/recently" />
    <!--
         <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="fill_parent" 
        android:layout_height="fill_parent"
        android:layout_below="@id/content_title" 
        />
    -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/content_title"
        android:id="@+id/content"
        android:orientation="vertical"
         >

        <ImageView
            android:id="@+id/recently_image"
            android:layout_width="fill_parent"
            android:layout_height="430dp" 
            />
        <com.oregonscientific.meep.customfont.MyTextView
	        android:id="@+id/recently_url"
	        style="@style/customfont_textview"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center" 
	        android:singleLine="true"
	        />
    </LinearLayout>

</RelativeLayout>