<?xml version="1.0" encoding="utf-8"?> 

<!-- 下载此软件的用户还下载了  布局 -->
<RelativeLayout 
	xmlns:android="http://schemas.android.com/apk/res/android" 
	android:id="@+id/image_lay" 
    android:layout_width="@dimen/gallery_like_item_width" 
    android:layout_height="@dimen/gallery_like_item_height" 
    android:gravity="center_horizontal"
    >
    
    <LinearLayout 
    	android:layout_width="@dimen/gallery_like_item_width"
    	android:layout_height="fill_parent"
    	android:layout_above="@+id/gallery_like_item_text_lay"
    	android:gravity="center"
    	>
    	<ImageView
    	android:id="@+id/app_iv"
    	android:layout_width="@dimen/gallery_like_item_image_size"
    	android:layout_height="@dimen/gallery_like_item_image_size"
    	android:scaleType="fitXY"
        /> 
    </LinearLayout> 
    
    <LinearLayout 
    	android:id="@+id/gallery_like_item_text_lay"
    	android:layout_width="@dimen/gallery_like_item_width"
    	android:layout_height="@dimen/gallery_like_item_text_height"
    	android:layout_alignParentBottom="true"
    	android:gravity="center"
    	>
    	<TextView 
    	android:id="@+id/app_name"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_gravity="center_horizontal"
    	
    	android:singleLine="true"
		android:ellipsize="marquee"
		android:marqueeRepeatLimit="marquee_forever" 
		
		android:textColor="#1b5479"
		android:textSize="@dimen/app_detail_description_size"
		android:textStyle="bold"/>
    </LinearLayout> 
    
		
</RelativeLayout>