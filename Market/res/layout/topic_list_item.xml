<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
  	android:layout_width="match_parent"
  	android:layout_height="@dimen/topic_list_item_h" >
	<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/rl_topic_item"
	  	android:layout_width="match_parent"
	  	android:layout_height="@dimen/topic_list_item_h" 
	  	android:paddingTop="@dimen/topic_list_item_padding_top_bottom"
	  	android:paddingBottom="@dimen/topic_list_item_padding_top_bottom"
	  	android:paddingLeft="@dimen/topic_list_item_padding_left_right"
		android:paddingRight="@dimen/topic_list_item_padding_left_right"
		android:background="@drawable/list_item_bg">
		
		<ImageView 
			android:id="@+id/iv_topic_pic"
			android:layout_width="@dimen/topic_list_item_pic_w"
			android:layout_height="@dimen/topic_list_item_pic_h"
			android:layout_alignParentLeft="true"
			android:layout_marginRight="@dimen/topic_list_item_pic_margin_right"/> 
		<TextView 
			android:id="@+id/tv_topic_desc"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignBottom="@id/iv_topic_pic"
			android:layout_toRightOf="@id/iv_topic_pic"
			android:layout_marginTop="@dimen/topic_list_item_text_spacing_extra"
			android:layout_marginBottom="@dimen/topic_list_item_text_spacing_extra"
			android:maxWidth="@dimen/topic_list_item_text_maxwidth"
			style="@style/topic_list_item_desc_text"/>  
		<TextView 
			android:id="@+id/tv_topic_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignLeft="@id/tv_topic_desc"
			android:layout_above="@id/tv_topic_desc"
			android:maxWidth="@dimen/topic_list_item_text_maxwidth"
			style="@style/topic_list_item_name_text"/> 
		<ImageView 
			android:id="@+id/iv_topic_type"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_alignParentRight="true"/>
	</RelativeLayout>
	<TextView 
		android:layout_width="fill_parent"
    	android:layout_height="1dip"
    	android:layout_alignParentBottom="true"
    	android:background="@drawable/divider_horizontal_dark_opaque"/>
</RelativeLayout>