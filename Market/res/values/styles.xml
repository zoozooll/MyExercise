<?xml version="1.0" encoding="utf-8"?>

<resources>
	<!-- 顶部选项卡文字 -->
	<style name="segmented_button_text">
		<item name="android:textSize">14sp</item>
		<item name="android:textColor">#FFF</item>
	</style>

	<!-- 专题一级列表 -->
	<style name="topic_list_item_name_text">
		<item name="android:textSize">14sp</item>
		<item name="android:textColor">#FF193460</item>
		<item name="android:ellipsize">end</item>
		<item name="android:singleLine">true</item>
	</style>
	
	<style name="topic_list_item_desc_text">
		<item name="android:textSize">11sp</item>
		<item name="android:textColor">#FF3a83bd</item>
		<item name="android:ellipsize">end</item>
		<item name="android:singleLine">true</item>
	</style>
	
	<style name="cate_list_item_count_text">
		<item name="android:textSize">11sp</item>
		<item name="android:textColor">#FFa9bec3</item>
		<item name="android:singleLine">true</item>
	</style>
	
	<style name="custom_normal_ratingbar">
		<item name="android:isIndicator">true</item>
		<item name="android:indeterminateOnly">false</item>
		<item name="android:indeterminateDrawable">@drawable/ratingbar_normal</item>
		<item name="android:progressDrawable">@drawable/ratingbar_normal</item>
		<item name="android:thumb">@null</item>
	</style>
	
	<style name="Theme.Translucent" parent="android:style/Theme.Translucent">
        <item name="android:windowNoTitle">true</item>
    </style>
    
    	<style name="tab_button_text">
		<item name="android:textSize">@dimen/tab_button_text_size</item>
		<item name="android:textColor">#FFF</item>
	</style>
</resources>
