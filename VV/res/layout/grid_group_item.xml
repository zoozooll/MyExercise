<?xml version="1.0" encoding="UTF-8"?>
<com.butterfly.vv.view.grid.IsometricSquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >
    <ImageView
        android:id="@+id/group_image"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/deafult_imgloading" />

    <TextView
        android:id="@+id/group_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/group_image"
        android:layout_marginTop="9dp"
        android:maxWidth="100dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="@color/text_shallow_black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/group_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/group_title"
        android:layout_alignBaseline="@+id/group_title"
        android:layout_marginLeft="5dp"
        android:textColor="@color/text_shallow_black"
        android:textSize="17sp"
        android:singleLine="true" />
    <TextView
        android:id="@+id/tvw_groupPath"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/group_title"
        android:layout_alignLeft="@+id/group_image"
        android:layout_alignRight="@+id/group_image"
        android:maxWidth="120sp"
        android:singleLine="true"
        android:ellipsize="middle"
        android:textColor="@color/text_gray"
        android:textSize="12sp"
        />

</com.butterfly.vv.view.grid.IsometricSquareLayout>