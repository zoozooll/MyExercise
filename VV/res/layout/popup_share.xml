<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingBottom="14dp"
        android:paddingTop="14dp"
        android:text="@string/vvim_share"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/share_commentItemBg" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         >

        <TableRow
            android:layout_marginLeft="7.3dp"
            android:layout_marginRight="7.3dp"
            android:layout_marginTop="21.3dp" >

            <LinearLayout
                android:id="@+id/layout_share_wechatmoment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingBottom="21.3dp" >

                <com.beem.project.btf.ui.views.ScaleImageView
                    style="@style/popup_share_item_imv"
                    android:src="@drawable/share_friend" />

                <TextView
                    style="@style/popup_share_item_tvw"
                    android:text="朋友圈" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_share_wechat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingBottom="21.3dp" >

                <com.beem.project.btf.ui.views.ScaleImageView
                    style="@style/popup_share_item_imv"
                    android:src="@drawable/share_wechat" />

                <TextView
                    style="@style/popup_share_item_tvw"
                    android:text="微信" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_share_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingBottom="21.3dp" >

                <com.beem.project.btf.ui.views.ScaleImageView
                    style="@style/popup_share_item_imv"
                    android:src="@drawable/share_qq" />

                <TextView
                    style="@style/popup_share_item_tvw"
                    android:text="QQ" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_marginLeft="7.3dp"
            android:layout_marginRight="7.3dp" >

            <LinearLayout
                android:id="@+id/layout_share_qqzone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingBottom="21.3dp" >

                <com.beem.project.btf.ui.views.ScaleImageView
                    style="@style/popup_share_item_imv"
                    android:src="@drawable/share_qqzone" />

                <TextView
                    style="@style/popup_share_item_tvw"
                    android:text="QQ空间" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_share_weibo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingBottom="21.3dp" >

                <com.beem.project.btf.ui.views.ScaleImageView
                    style="@style/popup_share_item_imv"
                    android:src="@drawable/share_webo" />

                <TextView
                    style="@style/popup_share_item_tvw"
                    android:text="微博 " />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_share_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingBottom="21.3dp" >

                <com.beem.project.btf.ui.views.ScaleImageView
                    style="@style/popup_share_item_imv"
                    android:src="@drawable/share_more" />

                <TextView
                    style="@style/popup_share_item_tvw"
                    android:text="更多" />
            </LinearLayout>
        </TableRow>
    </TableLayout>

</LinearLayout>