<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:orientation="vertical" >

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#d3d3d3" />

    <LinearLayout
        style="@style/Style_BottomBar"
        android:background="#F9F9F9"
        android:baselineAligned="true"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingTop="8dp" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" >

            <LinearLayout
                android:id="@+id/profile_layout_start_chat"
                style="@style/Style_Login_register_btn_bg"
                android:layout_width="wrap_content"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2.0dip"
                    android:drawableLeft="@drawable/btn_profile_bottom_icon_remark"
                    android:drawablePadding="3dip"
                    android:duplicateParentState="true"
                    android:gravity="center"
                    android:text="备注名"
                    android:textColor="@color/profile_bottom_text_color"
                    android:textSize="14.0sp" />
            </LinearLayout>
            <!-- 发送消息 -->

            <LinearLayout
                android:id="@+id/profile_layout_start_schat"
                style="@style/Style_Login_register_btn_bg"
                android:layout_width="wrap_content"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="visible" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2.0dip"
                    android:drawableLeft="@drawable/btn_profile_bottom_icon_follow"
                    android:drawablePadding="3dip"
                    android:duplicateParentState="true"
                    android:gravity="center"
                    android:text="发送消息"
                    android:textColor="@color/profile_bottom_text_color"
                    android:textSize="14.0sp" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="#d3d3d3" />
        <!-- 删除好友 -->

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" >

            <LinearLayout
                android:id="@+id/profile_layout_unfollow"
                style="@style/Style_Login_register_btn_bg"
                android:layout_width="wrap_content"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/btn_profile_bottom_icon_addfriend_selector"
                    android:gravity="center"
                    android:duplicateParentState="true"
                    android:text="删除好友"
                    android:textColor="@color/profile_bottom_text_color"
                    android:textSize="14.0sp" />
            </LinearLayout>

            <!-- 加为好友 -->

            <LinearLayout
                android:id="@+id/profile_layout_follow"
                style="@style/Style_Login_register_btn_bg"
                android:layout_width="wrap_content"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="visible" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/btn_profile_bottom_icon_addfriend_selector"
                    android:gravity="center"
                    android:duplicateParentState="true"
                    android:text="加为好友"
                    android:textColor="@color/profile_bottom_text_color"
                    android:textSize="14.0sp" />
            </LinearLayout>
        </RelativeLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="#d3d3d3" />
        <!-- 拉黑 -->

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" >

            <LinearLayout
                android:id="@+id/profile_layout_report"
                style="@style/Style_Login_register_btn_bg"
                android:layout_width="wrap_content"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/btn_profile_bottom_icon_report"
                    android:gravity="center"
                    android:duplicateParentState="true"
                    android:textColor="@color/profile_bottom_text_color"
                    android:textSize="14.0sp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>