<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="10dip"
    android:paddingRight="10dip" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dip"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/nicnameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginTop="10dip"
                android:text="大水哥"
                android:textColor="@color/text_gray_more"
                android:textSize="17sp"
                android:visibility="visible" />

            <com.beem.project.btf.bbs.view.ClearEditText
                android:id="@+id/nickNameEdit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:maxHeight="50dp"
                android:background="@drawable/clearedit_bg"
                android:gravity="center_vertical|left"
                android:hint="请输入昵称"
                android:paddingBottom="5dip"
                android:paddingLeft="5dip"
                android:textColor="@color/edittext"
                android:textColorHint="@color/edithint"
                android:textSize="15sp" 
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:orientation="vertical" >

            <ListView
                android:id="@+id/showResultList"
                android:layout_width="match_parent"
                android:layout_height="105dip"
                android:cacheColorHint="#00000000"
                android:divider="@null"
                android:dividerHeight="0dp"
                android:fadingEdge="none"
                android:listSelector="@drawable/setting_item_selector"
                android:visibility="visible" >
            </ListView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>