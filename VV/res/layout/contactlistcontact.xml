<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list"
    android:layout_width="fill_parent"
    android:layout_height="88.3dip"
    android:background="@drawable/setting_item_selector"
    android:paddingBottom="7.5dip"
    android:paddingTop="7.5dip" >

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="75dip"
        android:layout_height="75dip"
        android:layout_marginLeft="12dp"
        android:adjustViewBounds="false"
        android:scaleType="centerCrop"
        android:src="@drawable/default_head_selector" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/vvzone_wraper"
        android:layout_toRightOf="@+id/avatar"
        android:orientation="vertical"
        android:paddingLeft="18dp" >

        <TextView
            android:id="@+id/contactlistpseudo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:text="--"
            android:textColor="#434343"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible" >

            <TextView
                android:id="@+id/profile_tv_agenew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bbs_sexage_background_selector"
                android:drawableLeft="@drawable/bbs_sexage_foreground_selector"
                android:drawablePadding="3dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="50"
                android:textColor="@color/white_font"
                android:textSize="10.0sp" />

            <TextView
                android:id="@+id/profile_tv_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dip"
                android:drawableLeft="@drawable/map_icon"
                android:drawablePadding="5dp"
                android:text="0.37km"
                android:textColor="#888888"
                android:textSize="10.0sp" />

            <View
                android:layout_width="0.5dip"
                android:layout_height="10dip"
                android:layout_marginLeft="3dip"
                android:layout_marginRight="3dip"
                android:background="#888888" />

            <TextView
                android:id="@+id/profile_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8分钟前"
                android:textColor="#888888"
                android:textSize="10.0sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/contactlistmsgperso"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="人生就是一场戏全靠演技,我单位首都慰问地方"
            android:textColor="#888888"
            android:textSize="12sp"
            android:visibility="visible" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/vvzone_wraper"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:paddingLeft="10dip"
        android:paddingRight="12dp" >

        <ImageView
            android:id="@+id/vvzone"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_centerVertical="true"
            android:background="#00000000"
            android:src="@drawable/btn_vv_im_zone" />

        <!--
             <TextView
            android:id="@+id/add_from_new_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="#00000000"
            android:clickable="true"
            android:paddingRight="10dp"
            android:text="@string/add_new_friend"
            android:textColor="@color/blue"
            android:textSize="21sp"
            android:visibility="gone" />
        -->
    </RelativeLayout>

</RelativeLayout>