<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/mailer_show" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/view_mailerContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/mailer_content" >
        </ImageView>

        <TextView
            android:id="@+id/tvw_mailerContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="13.7dp"
            android:textColor="@color/black" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvw_mailerTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="26dp"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:drawableLeft="@drawable/mailer_to"
        android:drawablePadding="5dp"
        android:text="张佳遥" />

</RelativeLayout>