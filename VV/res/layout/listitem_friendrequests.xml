<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/msg_list"
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:background="@drawable/setting_item_selector"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="58dip"
            android:layout_height="58dip"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:focusable="false"
            android:paddingLeft="12dip"
            android:paddingRight="12dip"
            android:scaleType="centerCrop"
            android:src="@drawable/img_people" >
        </ImageView>

        <RelativeLayout
            android:id="@+id/middle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dip"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/tvw_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:text="王明月dddddddddddddddddddddddddd"
                android:textColor="#434343"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvw_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvw_name"
                android:layout_marginTop="12dp"
                android:ellipsize="end"
                android:hint="验证消息为空"
                android:linksClickable="false"
                android:maxLines="1"
                android:text="留言速度速度速度留言速度速度速度留言速度速度速度留言速度速度速度留言速度速度速度"
                android:textColor="#888888"
                android:textColorLink="@color/black"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/right_ifo_wraper"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginRight="12dp" >

            <TextView
                android:id="@+id/sessiondate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="13dp"
                android:singleLine="true"
                android:text="8:15"
                android:textColor="#cbcbcb"
                android:textSize="10sp" />
            
            <TextView
                android:id="@+id/tvw_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:text="已同意"
                android:textColor="#cbcbcb"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/imv_verify"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/text_roundbackground1"
                android:gravity="center"
                android:visibility="visible" />
            
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/msg_list"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:src="@color/share_commentItemBg" />

</RelativeLayout>