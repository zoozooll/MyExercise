<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    <ImageView
         android:id="@+id/vertical_line"
         android:layout_width="wrap_content"
         android:layout_height="match_parent"
         android:layout_marginLeft="12dip"
         android:layout_marginTop="0dip"
         android:layout_alignParentTop="true"
         android:layout_alignParentBottom="true"
         android:scaleType="fitXY"
         android:src="@drawable/date_linebelow"
           />
    
    <LinearLayout android:id="@+id/layout_ImageViews"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:layout_marginTop="2dp"
          android:layout_marginLeft="8dip"
          android:layout_marginRight="8dip"
          android:orientation="horizontal"
           >
        	<include android:id="@+id/layout_ImageItem0"
        	    android:layout_width="0dp"
        	    android:layout_height="wrap_content"
        	    android:layout_weight="1"
        	    layout="@layout/xc_date_photo_grid_item" />
        	<include android:id="@+id/layout_ImageItem1"
        	    android:layout_width="0dp"
        	    android:layout_height="wrap_content"
        	    android:layout_weight="1"
        	    android:layout_marginLeft="2dp"
        	    layout="@layout/xc_date_photo_grid_item"  />
        	<include android:id="@+id/layout_ImageItem2"
        	    android:layout_width="0dp"
        	    android:layout_height="wrap_content"
        	    android:layout_weight="1"
        	    android:layout_marginLeft="2dp"
        	    layout="@layout/xc_date_photo_grid_item"  />
    </LinearLayout>

</LinearLayout>
