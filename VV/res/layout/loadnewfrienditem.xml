<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list"
    android:layout_width="fill_parent"
    android:layout_height="80dip"
    android:background="@drawable/setting_item_selector"
    android:paddingBottom="7.5dip"
    android:paddingTop="7.5dip" >

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="64dip"
        android:layout_height="64dip"
        android:layout_marginLeft="12dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_people" />

    <RelativeLayout
        android:id="@+id/layout_right"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:paddingLeft="10dip"
        android:paddingRight="12dp" >

        <Button
            android:id="@+id/vvzone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/btn_vv_im_zone"
            android:visibility="visible" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_toLeftOf="@+id/layout_right"
        android:layout_toRightOf="@+id/avatar"
        android:orientation="vertical"
        android:paddingLeft="18dp" >

        <TextView
            android:id="@+id/contactlistpseudo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:text="王明月"
            android:textColor="#434343"
            android:textSize="16sp"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/profile_layout_sex_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible" >

            <TextView
                android:id="@+id/profile_tv_agenew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bbs_sexage_background_selector"
                android:drawableLeft="@drawable/bbs_sexage_foreground_selector"
                android:drawablePadding="3dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="50"
                android:textColor="@color/white_font"
                android:textSize="10.0sp" />

            <TextView
                android:id="@+id/profile_tv_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36.0dp"
                android:drawableLeft="@drawable/map_icon"
                android:drawablePadding="5.0dp"
                android:text="0.37km"
                android:textColor="#888888"
                android:textSize="10.0sp" />

            <View
                android:layout_width="0.5dip"
                android:layout_height="10dip"
                android:layout_marginLeft="3dip"
                android:layout_marginRight="3dip"
                android:background="#888888" />

            <TextView
                android:id="@+id/profile_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8分钟前"
                android:textColor="#888888"
                android:textSize="10.0sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/contactlistmsgperso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:hint="暂无签名"
            android:text="手机通讯录(13888888888) 一夜七次郎"
            android:textColor="#888888"
            android:textSize="11sp" />
    </LinearLayout>

</RelativeLayout>