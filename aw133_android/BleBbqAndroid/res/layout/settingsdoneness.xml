<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
     >

   	<TextView android:id="@+id/donenesstv"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:text="@string/donenessbig"
   	    style="@style/linetoptitlesizecolor"
   	    />
   	<ImageView android:id="@+id/line"
   	    android:layout_width="fill_parent"
   	    android:layout_height="2dp"
   	    android:background="@drawable/linet"
   	    android:layout_below="@id/donenesstv"
   	    />

   	<com.oregonscientific.bbq.view.NoScrollListView android:id="@+id/meatlist"
   	    android:layout_width="match_parent"
	   	android:layout_height="match_parent"
	   	android:layout_below="@+id/line"
	   	android:listSelector="#00000000"
	   	android:fadingEdge="none"
   	    />

</RelativeLayout>