<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
	<RelativeLayout
        android:id="@+id/ht"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/actionbarbg"
        >
	     <ImageView
	        android:id="@+id/menuimg"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:background="@drawable/ic_drawer"
	        />
	     <ImageView
	        android:id="@+id/homeimg"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@+id/menuimg"
	        style="@style/marginleftcenter"
	        android:background="@drawable/home_selector"
	        />
	    <TextView
	        android:id="@+id/hometext"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@+id/homeimg"
	        android:text="@string/home"
	   	style="@style/top_size_color"
	        />
	    <ImageView
	        android:id="@+id/editmode"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toLeftOf="@+id/settingsButt"
	        android:background="@drawable/iconedit"
	        style="@style/marginrightcenter"
	        />
	    <ImageView
	        android:id="@+id/settingsButt"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        style="@style/marginrightcenter"
	        android:background="@drawable/iconsettings"
	        />
	</RelativeLayout>
    <LinearLayout
        android:id="@+id/channelchoose"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ht"
        android:gravity="center_vertical"
        >
	    <TextView
            android:id="@+id/chooseone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/chone" 
            android:layout_weight="1"
            style="@style/top_chsize"
            android:gravity="center"
            android:background="@drawable/tab_selected_left"
            />
	    <TextView
            android:id="@+id/vertline"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@drawable/tab_sperator"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/choosetwo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/chtwo" 
            android:layout_weight="1"
            android:gravity="center"
            style="@style/top_chsize"
            android:background="@drawable/tab_unselected_right"
            />
	</LinearLayout>
	<ImageView android:id="@+id/horizline"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@drawable/linet"
            android:layout_below="@+id/channelchoose"
            />
</RelativeLayout>
