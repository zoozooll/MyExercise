<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
   android:background="@drawable/top_bg"
  android:layout_width="fill_parent"
  android:gravity="center_vertical"
  android:layout_height="40dip">
  <!-- 页面标题栏 -->
  <TextView
   android:id="@+id/download_titlebanner_content"
   android:layout_alignParentLeft="true"
   android:layout_alignRight="@+id/download_titlebanner_myres"
   android:layout_width="wrap_content"
   android:textSize="15dip"
   android:layout_marginTop="5dip"
   android:layout_height="35dip"
   android:text="下载管理"/>
   <LinearLayout
   android:layout_width="wrap_content"
   android:layout_height="wrap_content"
   android:orientation="horizontal"
   android:paddingRight="5dip"
   android:layout_alignParentRight="true"
   >
   <Button
   android:id="@+id/download_private_database"
   android:layout_width="wrap_content"
   android:layout_height="wrap_content"
   android:gravity="center"
  style="@style/buttonTextStyle"
  android:visibility="invisible"
    android:background="@drawable/button_selector"
   android:text="@string/myResource"/>
  <Button
  android:layout_marginLeft="5dip"
   android:id="@+id/all_pause_download"
   android:layout_width="wrap_content"
   android:layout_height="35dip"
   android:gravity="center"
     style="@style/buttonTextStyle"
     android:background="@drawable/button_selector"
   android:text="@string/allPauseDownload"/>
   
   </LinearLayout>
  

</RelativeLayout>
