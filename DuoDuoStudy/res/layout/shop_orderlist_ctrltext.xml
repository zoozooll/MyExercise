<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="wrap_content"
	android:layout_height="fill_parent" >
	<Button  android:id="@+id/btnDetail"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:gravity="center" android:background="@drawable/btn_orange_selector"
		android:text="查看" android:visibility="gone"></Button>
	<Button android:id="@+id/btnPayfor"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:gravity="center" android:background="@drawable/btn_orange_selector"
		android:text="支付" android:visibility="gone"></Button>
	<Button android:id="@+id/btnCancel"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:gravity="center" android:background="@drawable/btn_orange_selector"
		android:text="取消" android:visibility="gone"></Button>

</LinearLayout>
