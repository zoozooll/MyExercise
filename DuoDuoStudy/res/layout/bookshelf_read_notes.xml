<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#FFFFFF">
  
           <LinearLayout 
		      android:id="@+id/linear1" 
		      android:orientation="horizontal"
			  android:layout_width="fill_parent"
			  android:layout_height="40dip"
		      android:background="@drawable/bookshelf_indextopback">
		        <TextView 
					  android:id="@+id/bookshelf_read_notes_sm"
					  android:layout_margin="5dip"
					  android:layout_height="40dip" 
					  android:layout_width="100dip" 
					  android:text="《可可口语课堂 》"
					  android:textSize="12dip"
					  android:textColor="#000"/>
			   <TextView 
					  android:id="@+id/bookshelf_read_notes_dsbj"
					  android:layout_margin="5dip"
					  android:layout_height="40dip" 
					  android:layout_width="50dip"
					  android:text="读书笔记"
					  android:textSize="12dip"
					  android:textColor="#000"/>
				<TextView 
					  android:id="@+id/bookshelf_read_notes_zts"
					  android:layout_margin="5dip"
					  android:layout_height="40dip" 
					  android:layout_width="40dip"
					  android:text="（25）"
					  android:textSize="12dip"
					  android:textColor="#000"/>
			 <LinearLayout android:orientation="horizontal"
			  android:layout_width="fill_parent"
			  android:layout_height="60dip"
			  android:layout_marginLeft="190dip">
			  <TextView 
				  android:id="@+id/bookname"
				  android:layout_marginTop="10dip"
				  android:layout_height="15dip" 
				  android:layout_width="20dip" 
				  android:text=" " android:background="@drawable/bookshelf_readss"/>
			 
		       </LinearLayout>
           </LinearLayout>
       <ListView android:id="@+id/bookshelfreadreadnote_lvbi" 
		android:layout_width="fill_parent"
		android:layout_height="450dip"
		android:visibility="visible"
		android:layout_below="@+id/linear1"/>
		<RelativeLayout
			    android:id="@+id/linear4"
			    android:layout_width="fill_parent"
			    android:layout_height="40dip"
			    android:layout_margin="4dip"
			    android:gravity="center_vertical"
			    android:layout_alignParentBottom="true"
			    android:background="@drawable/bottom_layout_bg">
			    <ImageView
			        android:id="@+id/bookshelfreadnote_bottomcd"
			        android:background="@drawable/menu_selector"
			        android:layout_width="30dip"
			        android:layout_height="30dip"
			        android:layout_marginRight="2dip"
			        android:paddingLeft="10dip"
			        android:layout_alignParentLeft="true"
			    />
			    <ImageView
			        android:id="@+id/bookshelfreadnote_bottomfh"
			        android:background="@drawable/bottom_right"
			        android:layout_width="30dip"
			        android:layout_height="30dip"
			        android:layout_alignParentRight="true"
			        android:paddingRight="5dip"
			    />
			  </RelativeLayout>
</RelativeLayout>
