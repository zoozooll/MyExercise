<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content">
    <LinearLayout
           android:id="@+id/linear4"
           android:background="@color/white"
           android:orientation="vertical"
           android:layout_height="wrap_content" 
           android:layout_width="wrap_content" 
           >
    <TextView
      android:id="@+id/bookshelfall_allProject"
      android:layout_height="wrap_content" 
      android:layout_width="wrap_content" 
      android:textColor="#000"
      android:gravity="center"
      android:text="全部" 
      android:background="@drawable/bookshelfgift_all_selector"
      />
      <TextView
      android:id="@+id/bookshelfall_chinese"
      android:layout_height="wrap_content" 
      android:layout_width="wrap_content"  
      android:textColor="#000"
      android:gravity="center"
      android:text="书名" 
      android:background="@drawable/bookshelfgift_bookname_selector"
      />
      <TextView
      android:id="@+id/bookshelfall_math"
      android:layout_height="wrap_content" 
      android:layout_width="wrap_content" 
      android:textColor="#000"
      android:gravity="center"
      android:text="作者" 
      android:background="@drawable/bookshelfgift_author_selector"
      />
      <TextView
      android:id="@+id/bookshelfall_english"
      android:layout_height="wrap_content" 
      android:layout_width="wrap_content" 
      android:textColor="#000"
      android:gravity="center"
      android:text="分类" 
      android:background="@drawable/bookshelfgift_sort_selector"
      />
    
    </LinearLayout>
</LinearLayout>
