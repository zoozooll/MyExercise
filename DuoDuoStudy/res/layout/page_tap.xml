<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="horizontal"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:gravity="center"
  android:background="@drawable/bottom_layout_bg">

	 <LinearLayout
	 android:layout_width="fill_parent"
	  android:layout_height="wrap_content"
	  android:layout_weight="0.5"
	  android:gravity="center">
           <TextView 
			 android:id="@+id/bookself_currpage" 
			 android:textSize="15dip" 
				  android:layout_height="wrap_content" 
				  android:layout_width="wrap_content" 
				  android:textColor="#0000FF" 
				  android:text="0"/>
				  <TextView 
			 android:id="@+id/bookself_page_number" 
			 android:textSize="15dip" 
				  android:layout_height="wrap_content" 
				  android:layout_width="wrap_content" 
				  android:textColor="#0000FF" 
				  android:text="/"/>
				  <TextView 
			 android:id="@+id/bookself_countpage" 
			 android:textSize="15dip" 
				  android:layout_height="wrap_content" 
				  android:layout_width="wrap_content" 
				  android:textColor="#0000FF" 
		 		  android:text="0"/>
            <TextView 
			 	  android:textSize="15dip" 
				  android:layout_height="wrap_content" 
				  android:layout_width="wrap_content" 
				  android:textColor="@color/black" 
				  android:layout_marginLeft="10dip"
				  android:text="我要去 第"/>
             <EditText 
                  android:id="@+id/input_pag"
                  android:textSize="15dip"
				  android:layout_height="wrap_content" 
				  android:layout_width="wrap_content" 
				  android:background="@drawable/input_edite"/>
              <TextView 
			 	  android:textSize="15dip" 
				  android:layout_height="wrap_content" 
				  android:layout_width="wrap_content" 
				  android:textColor="@color/black" 
				  android:text="页"/>
				
				<Button 
				android:padding="5dip"
				android:id="@+id/goto_page_confirm"
				  android:layout_height="30dip" 
				  android:layout_width="60dip" 
				  android:textSize="10dip"
				  android:text="确定"
				 />  	  
         </LinearLayout>
 
</LinearLayout>
