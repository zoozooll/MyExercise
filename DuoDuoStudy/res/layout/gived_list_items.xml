<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#FFFFFF">
  <ImageView android:id="@+id/gived_book_image"
  	android:layout_width="50dip"
  	android:layout_height="wrap_content"
  	android:src="@drawable/bookone"
  />
  <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
  	<RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content">
		<LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical">
			<TextView android:text="书       名： " 
				android:id="@+id/gived_bookName"
				android:textColor="#000000"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
			/>
			<TextView android:text="赠送类型： "
				android:id="@+id/gived_Type"
				android:textColor="#000000"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
			/>
			<TextView android:text="获  赠 人：  "
				android:id="@+id/gived_person"
				android:textColor="#000000"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
			/>
		</LinearLayout>
  		<TextView android:layout_alignParentRight="true" android:layout_marginRight="6dip" android:id="@+id/dateTime" android:textColor="#000000" android:text="2011-02-01  14:00" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
  	</RelativeLayout>
  	<TextView android:id="@+id/gived_talk" android:layout_width="fill_parent" android:layout_height="wrap_content"/>
  </LinearLayout>
</LinearLayout>
