<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="@color/darkcyan">

 <LinearLayout
    android:id="@+id/lesson_sysnclass_layout_first"
    android:layout_width="fill_parent"
    android:layout_height="40dp"
    android:background="@drawable/toptitle02">
    <TextView
     android:id="@+id/lesson_sysnclass_textview"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="@string/sysnclassSearch"
     android:textColor="@color/black"
     android:layout_marginTop="10dip"
     android:gravity="left"/>
    <Button
      android:id="@+id/lesson_sysnclass_btn"
      android:layout_width="60dip"
      android:layout_height="30dip"
      android:layout_marginTop="2dip"
      android:layout_marginLeft="260dip"
      android:text="返回书架"
      android:background="@drawable/button_bg"/>
  </LinearLayout>

<!-- 搜索  -->
<LinearLayout 
  android:id="@+id/lesson_sysnclass_layout_second"
  android:orientation="horizontal"
  android:layout_width="fill_parent"
  android:layout_height="40dip"
  android:layout_below="@id/lesson_sysnclass_layout_first">
         <EditText 
	        android:id="@+id/lesson_sysnclass_search_info"
	        android:layout_height="30dip" 
			android:layout_width="fill_parent"
			android:layout_marginLeft="5dip"
			android:layout_weight="1"
			android:textSize="13dip"
            android:layout_marginTop="8dip"
			android:background="@drawable/searchinput"/>
		<ImageView 
		      android:id="@+id/lesson_search_btn"
			  android:layout_height="30dip" 
			  android:layout_width="wrap_content"  
              android:layout_marginTop="8dip"
              android:layout_marginRight="10dip"
			  android:background="@drawable/bookshelf_searchbtn_selector"/>
		<ImageView 
	        android:id="@+id/lesson_aritics_search" 
		    android:layout_height="wrap_content" 
		    android:layout_width="wrap_content" 
		    android:layout_margin="5dip"
            android:layout_marginTop="10dip"
		    android:background="@drawable/bookshelf_advancedbtnhover_selector"/>
</LinearLayout>  
 
 <ImageView
      android:id="@+id/lesson_sysnclass_layout_third"
      android:background="@drawable/page_top_bg"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="5dip"
      android:layout_below="@id/lesson_sysnclass_layout_second"
 ></ImageView>

 <LinearLayout
      android:id="@+id/lesson_sysnclass_search_select_layout"
      android:background="@color/white"
      android:layout_width="fill_parent"
      android:layout_height="40dp"
      android:layout_marginLeft="5dip"
      android:gravity="center_vertical"
      android:layout_below="@id/lesson_sysnclass_layout_third">
     <TextView
         android:id="@+id/lesson_sysnclass_search_select_title"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="@string/sysnClassSelect"
         android:textColor="@color/black"/>  
     <TextView
         android:id="@+id/lesson_sysnclass_search_select_items"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="语文，数学，外语"
         android:textColor="@color/black"/>      
 </LinearLayout>

<LinearLayout
	android:id="@+id/lesson_project_layout"
	android:orientation="vertical"
	android:background="@color/white"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dip"
    android:layout_below="@id/lesson_sysnclass_search_select_layout"
>



<!-- 科目 -->
