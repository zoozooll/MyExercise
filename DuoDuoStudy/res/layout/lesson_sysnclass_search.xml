        android:id="@+id/chk_chinese"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/MyCheckBox"
        android:text="语文"/>
        <CheckBox 
        android:id="@+id/chk_english"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/MyCheckBox"
        android:text="英语"/>
        <CheckBox 
        android:id="@+id/chk_mathematical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/MyCheckBox"
        android:text="数学"/>
        <CheckBox 
        android:id="@+id/chk_physical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/MyCheckBox"
        android:text="物理"/>
        <CheckBox 
        android:id="@+id/chk_chemical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/MyCheckBox"
        android:text="化学"/>
        <CheckBox 
        android:id="@+id/chk_science"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/MyCheckBox"
        android:text="科学"/>
        
 </LinearLayout>

