<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="wrap_content"
	android:padding="5dp">

	<ImageView android:id="@+id/bookImage" android:layout_width="65dip"
		android:layout_height="95dip" android:scaleType="fitXY" />
	<RelativeLayout android:layout_width="wrap_content"
		android:layout_marginLeft="12dip" android:layout_height="wrap_content"
		android:id="@+id/listText" android:layout_toRightOf="@id/bookImage">
		<TextView android:textColor="@drawable/black" android:id="@+id/bookName"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:maxWidth="100dp" android:ellipsize="marquee"/>
		<TextView android:textColor="@drawable/black" android:id="@+id/bookAuthor"
			android:layout_below="@id/bookName" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:visibility="gone" />
		<TextView android:textColor="@drawable/black" android:id="@+id/bookPrice"
			android:layout_below="@id/bookAuthor"
			android:layout_alignParentBottom="true" android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
	</RelativeLayout>
	<TextView android:id="@+id/bookNum" android:textColor="@drawable/black"
		android:layout_alignParentRight="true" android:layout_alignParentTop="true"
		android:layout_width="wrap_content" android:layout_height="wrap_content" />
</RelativeLayout>
