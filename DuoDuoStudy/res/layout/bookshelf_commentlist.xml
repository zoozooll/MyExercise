<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#FFFFFF">
          <LinearLayout 
		      android:id="@+id/commentlistlinear1" 
		      android:orientation="horizontal"
			  android:layout_width="fill_parent"
			  android:layout_height="50dip"
		      android:background="@drawable/bookshelf_indextopback">
	        <TextView 
				  android:id="@+id/bookname"
				  android:layout_margin="10dip"
				  android:layout_height="40dip" 
				  android:layout_width="100dip" 
				  android:textColor="#000"
				  android:text="我的书评"/>
			 <LinearLayout android:orientation="horizontal"
			  android:layout_width="fill_parent"
			  android:layout_height="40dip"
			  android:gravity="right">
			  <TextView 
				  android:id="@+id/bookname"
				  android:layout_marginTop="5dip"
				  android:layout_height="30dip" 
				  android:layout_width="60dip"   
				  android:background="@drawable/bookshelfcommentlist_fhsj"
				  />
		       </LinearLayout>
         </LinearLayout>
         
         <ListView android:id="@+id/bookshelfcommentlist_lv" 
			android:layout_width="fill_parent"
		    android:layout_height="450dip"
			android:visibility="visible"
			
			android:layout_below="@+id/commentlistlinear1"/>
         <RelativeLayout
			    android:id="@+id/linear4"
			    android:layout_width="fill_parent"
			    android:layout_height="40dip"
			    android:layout_margin="4dip"
			    android:gravity="center_vertical"
			    android:layout_alignParentBottom="true"
			    android:background="@drawable/bottom_layout_bg">
			    <ImageView
			        android:id="@+id/bookshelfcommentlist_bomcd"
			        android:background="@drawable/menu_selector"
			        android:layout_width="30dip"
			        android:layout_height="30dip"
			        android:layout_marginRight="2dip"
			        android:paddingLeft="10dip"
			        android:layout_alignParentLeft="true"
			    />
			    <ImageView
			        android:id="@+id/bookshelfcommentlist_bomfh"
			        android:background="@drawable/bottom_right"
			        android:layout_width="30dip"
			        android:layout_height="30dip"
			        android:layout_alignParentRight="true"
			        android:paddingRight="5dip"
			    />
			  </RelativeLayout>
</RelativeLayout>
