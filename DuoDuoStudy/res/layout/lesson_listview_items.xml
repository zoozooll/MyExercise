<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="horizontal"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:background="#FFFFFF">
   <!-- 最左边 -->
   <FrameLayout
    android:id="@+id/lesson_layout_imgview"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
	    <ImageView
		    android:id="@+id/lesson_list_imgview"
		    android:layout_width="90dip"
		    android:layout_height="90dip"
		    android:layout_marginLeft="10dip"
		    android:paddingTop="5dip"
		    android:paddingBottom="5dip"
		    android:src="@drawable/lesson"/>
	    <ImageView
		    android:id="@+id/lesson_list_play"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:src="@drawable/courseware"
		    android:paddingLeft="25dip"
		    android:paddingTop="30dip"
		    android:paddingRight="30dip"
		    android:paddingBottom="30dip"/>
    </FrameLayout>
    <!-- 中间 -->
    <LinearLayout
    android:id="@+id/lesson_layout_imgview"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingLeft="10dip">
    <!-- 讲师姓名 -->
		  <LinearLayout
		    android:id="@+id/lesson_teacher_layout"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal">
			    <TextView
			      android:id="@+id/lesson_teacher_title"
			      android:layout_width="wrap_content"
			      android:layout_height="wrap_content"
			      android:text="@string/lectureTeacher"
			      android:layout_weight="0.1"
			      style="@style/lessonstyle"/>  
			    <TextView
			      android:id="@+id/lesson_teacher_name"
			      android:layout_width="wrap_content"
			      android:layout_height="wrap_content"
			      style="@style/lessonstyle"
			      android:layout_weight="0.2"/>  
			   <TextView
			      android:id="@+id/lesson_teacher_shcoll"
			      android:layout_width="wrap_content"
			      android:layout_height="wrap_content"
			      android:text=" "
			      android:layout_weight="0.35"
			      style="@style/lessonstyle"/>  
			    <TextView
			      android:id="@+id/lesson_teacher_honour"
			      android:layout_width="wrap_content"
			      android:layout_height="wrap_content"
			      android:layout_weight="0.35"
			      style="@style/lessonstyle"/>
		  </LinearLayout>
		  <!-- 右边 -->
		   <LinearLayout
		    android:id="@+id/lesson_object_layout"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical"
		    android:layout_marginTop="10dip"
		    android:paddingRight="10dip"
		    android:layout_toRightOf="@id/lesson_layout_imgview">
		    <!-- 课件 -->
		    <LinearLayout
		     android:layout_width="wrap_content"
			 android:layout_height="wrap_content">
		      <TextView
			      android:id="@+id/lesson_object_title"
			      android:layout_width="wrap_content"
			      android:layout_height="wrap_content"
			      android:text="@string/objectCourse"
			 	  android:textSize="15dip"
				  android:textColor="@color/black"/>
		    </LinearLayout>
			<LinearLayout
		     android:layout_width="fill_parent"
			 android:layout_height="wrap_content"
			 android:layout_marginLeft="5dip">
			    <TextView
			      android:id="@+id/lesson_object_info"
			      android:layout_width="fill_parent"
			      android:layout_height="wrap_content"
			      android:text=""
			 	  android:textSize="14dip"
			 	  android:maxLines="3"
				  android:textColor="#555555"/>
			</LinearLayout>
		   </LinearLayout>
		   
