<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="@color/white">
<!-- 最顶层 -->  
<LinearLayout
	android:id="@+id/duoduo_account_top"
    android:layout_alignParentTop="true"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">
	<include
	 layout="@layout/myself_infos_top"
	 android:layout_alignParentTop="true"/>
</LinearLayout>
<!-- 最低层 -->  
<LinearLayout
	android:id="@+id/duoduo_account_bottom"
    android:layout_alignParentBottom="true"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">
	<include 
	layout="@layout/download_bottom_item"
	android:layout_alignParentBottom="true"/>
</LinearLayout>

<LinearLayout 
	android:id="@+id/price_layout"
	android:layout_width="wrap_content"
    android:layout_height="35dip"
    android:layout_below="@id/duoduo_account_top">
    <TextView
    android:id="@+id/price_title_txt"
	android:layout_width="wrap_content"
    android:layout_height="35dip"
    android:text="你当前消费的金额为:"
    android:textSize="15dip"
    android:textColor="@color/black"/>
    <TextView
    android:id="@+id/price_content_txt"
	android:layout_width="wrap_content"
    android:layout_height="35dip"
    android:text="￥ 50.00"
    android:textColor="@color/red"
    android:textSize="20dip"
    android:layout_marginRight="120dip"/>
    <Button
    android:id="@+id/price_recharge_btn"
	android:layout_width="50dip"
    android:layout_height="35dip"
    android:background="@drawable/recharge"
    android:layout_gravity="right"
    android:paddingRight="8dip"/>
</LinearLayout>

<LinearLayout
    android:id="@+id/trade_layout"
    android:orientation="vertical"
	android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/price_layout">
    <Button
    android:id="@+id/trade_btn"
    android:background="@drawable/trade"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>
    <LinearLayout
    android:id="@+id/trade_singline_layout"
	android:layout_width="wrap_content"
    android:layout_height="wrap_content">
        <TextView
        android:id="@+id/trade_start_text"
        android:layout_width="wrap_content"
   		android:layout_height="wrap_content"
   		android:text="从"
   		android:textColor="@color/black"/>
   		<EditText
        android:id="@+id/trade_start_edit"
        android:layout_width="80dip"
   		android:layout_height="wrap_content"
   		android:textColor="@color/black"/>
   		<TextView
        android:id="@+id/trade_from_text"
        android:layout_width="wrap_content"
   		android:layout_height="wrap_content"
   		android:text="到"
   		android:textColor="@color/black"/>
   		<EditText
        android:id="@+id/trade_from_edit"
        android:layout_width="80dip"
   		android:layout_height="wrap_content"/>
   		<Button
   		android:id="@+id/trade_query"
        android:layout_width="wrap_content"
   		android:layout_height="wrap_content"
   		android:text="查询"
   		android:textColor="@color/black"
   		/>
    </LinearLayout> 
</LinearLayout>

<LinearLayout
        android:id="@+id/trade_listview_layout"
        android:orientation="vertical"
        android:layout_width="fill_parent"
   		android:layout_height="wrap_content"
   		android:layout_below="@+id/trade_layout">
	<LinearLayout
	    android:id="@+id/user_infos_layout"
        android:orientation="horizontal"
        android:background="#5f5f5f"
        android:layout_width="fill_parent"
   		android:layout_height="wrap_content">
	    <TextView
	    android:id="@+id/user_seq"
	    android:layout_width="30dip"
   		android:layout_height="wrap_content"
   		android:text="序号"
   		android:textColor="@color/black"
   		android:layout_weight="0.1"
   		/>
	    <TextView
	    android:id="@+id/user_name"
	    android:layout_width="50dip"
   		android:layout_height="wrap_content"
   		android:text="用户名"
   		android:textColor="@color/black"
   		android:layout_weight="0.2"
   		/>
	    <TextView
	    android:id="@+id/user_date"
	    android:layout_width="90dip"
   		android:layout_height="wrap_content"
   		android:text="时间"
   		android:textColor="@color/black"
   		android:layout_weight="0.3"
   		/>
	    <TextView
	    android:id="@+id/user_type"
	    android:layout_width="30dip"
   		android:layout_height="wrap_content"
   		android:text="类型"
   		android:textColor="@color/black"
   		android:layout_weight="0.1"
   		/>
	    <TextView
	    android:id="@+id/user_money"
	    android:layout_width="30dip"
   		android:layout_height="wrap_content"
   		android:text="金额"
   		android:textColor="@color/black"
   		android:layout_weight="0.1"
   		/>
	   <TextView
	    android:id="@+id/user_balance"
	    android:layout_width="30dip"
   		android:layout_height="wrap_content"
   		android:text="余额"
   		android:textColor="@color/black"
   		android:layout_weight="0.1"
   		/>
	</LinearLayout>   		
    <ListView
       	android:id="@+id/user_query_listview"
        android:layout_width="fill_parent"
   		android:layout_height="wrap_content"
   		android:divider = "@color/white"/>
</LinearLayout>

</RelativeLayout>
