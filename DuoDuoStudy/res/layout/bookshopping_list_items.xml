<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="wrap_content"
	android:padding="5dp">
		<ImageView android:id="@+id/bookImage"
			android:layout_height="90dip" android:layout_width="75dip"
			android:layout_marginLeft="10dp" />
		<!-- <ImageView android:id="@+id/bookCheck" android:layout_width="wrap_content"
			android:layout_height="wrap_content"  /> -->
		
	<Button android:layout_centerVertical="true"
		android:layout_width="55dp" android:layout_height="35dp"
		android:id="@+id/delete" android:textSize="12sp"
		android:background="@drawable/btn_orange_selector" android:layout_alignParentRight="true"
		android:layout_marginRight="5dp" android:textColor="@drawable/white"/>
	<Button android:layout_centerVertical="true"
		android:layout_width="75dp" android:layout_height="35dp"
		android:id="@+id/collect" android:textSize="12sp"
		android:background="@drawable/btn_orange_selector" android:layout_toLeftOf="@id/delete"
		android:layout_marginRight="5dp" android:textColor="@drawable/white"/>
		
	<TextView android:layout_width="wrap_content"
		android:layout_toLeftOf="@id/collect" android:layout_height="wrap_content"
		android:id="@+id/bookPrice" android:layout_centerVertical="true"
		android:layout_marginRight="25dip" android:textColor="@drawable/red"
		android:textSize="12sp"/>
		
	<TextView android:layout_width="fill_parent"
		android:layout_centerVertical="true" android:layout_toRightOf="@+id/bookImage"
		android:layout_toLeftOf="@+id/bookPrice" android:layout_marginRight="10dp"
		android:layout_height="wrap_content" android:id="@+id/bookName"
		android:textSize="13sp" android:textColor="@drawable/black"
		android:layout_marginLeft="10dp" />
	
</RelativeLayout>
