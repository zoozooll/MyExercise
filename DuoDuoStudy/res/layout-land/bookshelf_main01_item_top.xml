<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical"
  android:gravity="center_vertical">
<LinearLayout
  android:id="@+id/test_seesee"
  android:layout_width="fill_parent"
  android:layout_height="50dip"
  android:orientation="horizontal"
  android:gravity="center_vertical"
  android:background="@drawable/toptitle02">
<TextView
    android:id="@+id/book_name" 
	android:layout_width="wrap_content"
	android:layout_height="wrap_content" 
	android:textColor="@color/black"
	android:layout_marginLeft="10dip"
	android:textSize="15dip" 
	android:text="@string/bookshelf_toptitle"/>
<RelativeLayout android:orientation="horizontal"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:gravity="right"
  android:paddingRight="5dip"
  android:layout_marginTop="5dip">
 <ImageView 
      android:id="@+id/img_switch"
	  android:layout_height="wrap_content" 
	  android:layout_width="wrap_content"
	  android:background="@drawable/bookshelf_switch_selector"/>
  <ImageView 
	  android:id="@+id/bookshelf_all"
	  android:layout_toRightOf="@id/img_switch"
	  android:paddingRight="5dip"
	  android:layout_height="wrap_content" 
	  android:layout_width="wrap_content"
	  android:layout_marginTop="3dip"
	  android:background="@drawable/bookshelf_topall_selector" />
  <ImageView 
      android:id="@+id/bookshelf_shop"
      android:layout_toRightOf="@id/bookshelf_all"
	  android:paddingRight="5dip"
	  android:layout_marginTop="8dip"
	  android:layout_height="wrap_content" 
	  android:layout_width="wrap_content"  
	  android:src="@drawable/strollbookstore"/>
  </RelativeLayout>
</LinearLayout>
  
<LinearLayout 
  android:id="@+id/linear2"
  android:orientation="horizontal"
  android:layout_width="fill_parent"
  android:layout_height="40dip"
  android:background="@drawable/bookshelf02"
  android:layout_below="@+id/linear1">
        <EditText 
	        android:id="@+id/edits_serach"
	        android:layout_height="30dip" 
			android:layout_width="fill_parent"
			android:layout_marginLeft="10dp"
			android:layout_weight="1"
			android:textSize="13dip"
            android:layout_marginTop="7dip"
			android:background="@drawable/searchinput"/>
		<ImageView 
		      android:id="@+id/bookshelf_searchbtn"
			  android:layout_height="30dip" 
			  android:layout_width="wrap_content"  
              android:layout_marginTop="7dip"
              android:layout_marginRight="50dp"
			  android:background="@drawable/bookshelf_searchbtn_selector"/>
		<ImageView 
	        android:id="@+id/seach_text" 
		    android:layout_height="wrap_content" 
		    android:layout_width="wrap_content" 
		    android:layout_margin="5dip"
            android:layout_marginTop="10dip"
		    android:background="@drawable/bookshelf_advancedbtnhover_selector"/>
</LinearLayout>  
<TextView 
		      android:id="@+id/bookshelf_shelftop"
			  android:layout_height="8dip" 
			  android:layout_width="fill_parent"  
			  android:background="@drawable/bookshelf_shelftop"/>
</LinearLayout>