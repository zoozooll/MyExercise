<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pop_up_outmemory_id"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_gravity="top"
        android:layout_marginTop="15dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/title_text_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top"
            android:layout_marginLeft="73dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:text="@string/dlg_title_attention"
            android:textColor="#ffffff"
            android:textSize="@dimen/textsize_setting" />

        <TextView
            android:id="@+id/cue_text_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top"
            android:layout_marginLeft="43dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="30dp"
            android:text="@string/sdcard_no_space"
            android:textColor="#ffffff"
            android:textSize="@dimen/textsize_setting" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="23dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/BtnOK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="90dp"
            android:background="@drawable/dialog_btn"
            android:text="@string/clean_sdcard"
            android:textColor="#000000"
            android:textSize="@dimen/textsize_playback" />
    </LinearLayout>

</LinearLayout>