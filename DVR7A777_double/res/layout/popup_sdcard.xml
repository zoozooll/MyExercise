<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    
      android:id="@+id/activity_pop_up" 
	  android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:background="#000"><!-- android:background="@drawable/dialog_bg" -->
      
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_gravity="top"
        android:layout_marginTop="15dp"
        android:orientation="vertical">  
	    <TextView
	        android:id="@+id/title_text_id"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="left|top"
	        android:layout_marginLeft="73dp"
	        android:layout_marginRight="5dp"
	        android:layout_marginTop="15dp"
	        android:text="@string/tip"
	        android:textColor="#ffffff"
	        android:textSize="@dimen/textsize_setting" />
	    <TextView
	        android:id="@+id/cue_text_id"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="left|top"
	        android:layout_marginLeft="43dp"
	        android:layout_marginRight="5dp"
	        android:layout_marginTop="30dp"
	        android:text="@string/sdcard_format_ok"
	        android:textColor="#ffffff"
	        android:textSize="@dimen/textsize_setting" />
    </LinearLayout> 
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:layout_marginTop="23dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">  
	    <Button
	        android:textSize="@dimen/textsize_playback"
	        android:textColor="#000000"
	        android:id="@+id/BtnOK"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/dialog_btn"
	        android:layout_gravity="left"
	        android:layout_marginLeft="10dp"
	        android:text="@string/ok" />
	
	    <Button
	        android:textSize="@dimen/textsize_playback"
	        android:textColor="#000000"
	        android:id="@+id/BtnCancel"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/dialog_btn"
	        android:layout_gravity="right"
			android:layout_marginLeft="10dp"
	        android:text="@string/cancel" />
	</LinearLayout> 
</LinearLayout>
