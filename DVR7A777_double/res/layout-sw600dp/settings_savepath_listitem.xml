<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/setting_powersaving_item_bg" >

    <TextView
        android:id="@+id/savepath_path_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:paddingLeft="10dp"
        android:textColor="#fff"
        android:textSize="@dimen/textsize_set_savepath" />

    <TextView
        android:id="@+id/savepath_total_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingLeft="10dp"
        android:paddingTop="3dp"
        android:textColor="#fff"
        android:textSize="@dimen/textsize_save_path" />

    <TextView
        android:id="@+id/savepath_remainder_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:paddingBottom="3dp"
        android:paddingLeft="10dp"
        android:textColor="#fff"
        android:textSize="@dimen/textsize_save_path" />

    <ImageView
        android:id="@+id/power_saving_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingRight="10dp"
        android:scaleType="center"
        android:src="@drawable/setting_powersaving_select" />

</RelativeLayout>