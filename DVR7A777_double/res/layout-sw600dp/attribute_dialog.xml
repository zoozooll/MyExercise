   android:id ="@+id/a_name"
 />
<TextView android:layout_height="wrap_content"
   android:layout_width="wrap_content"
   android:id ="@+id/a_size"
    />
<TextView android:layout_height="wrap_content"
   android:layout_width="wrap_content"
   android:id ="@+id/a_time"
    />
<TextView android:layout_height="wrap_content"
   android:layout_width="wrap_content"
   android:id ="@+id/a_gesi"
   />

<TextView android:layout_height="wrap_content"
   android:layout_width="wrap_content"
   android:id ="@+id/a_path"
   />



    </LinearLayout>
</ScrollView>
 
</LinearLayout>


