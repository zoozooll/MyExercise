<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ControlButton">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0px</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/controlbar_btn_textSize</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/controlbar_btn_bg</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">@dimen/controlbar_btn_paddingLeft</item>
    </style>    
    
    <style name="ControlButton_Pic">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/main_btn_pic_bg</item>
    </style>   
    
    <style name="ControlButton_Set">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/main_btn_set_bg</item>
    </style> 
    
    <style name="ControlButton_PreSwitch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/controlbar_btn_bg</item>
    </style> 
    
    <style name="ControlButton_Record">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/main_btn_record_bg</item>
    </style> 
    
    <style name="ControlButton_Stop">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/main_btn_stop_bg</item>
    </style>
     
    <style name="ControlButton_Lock">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/main_btn_lock_bg</item>
    </style>
    
    <style name="ControlButton_PlayList">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/main_btn_playlist_bg</item>
    </style> 
    
    <style name="ControlButton_Mic">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/main_btn_mic_bg</item>
    </style> 

    <style name="BottomBarText">
    	<item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textSize">@dimen/bottombar_info_textSize</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/bottombar_info_marginLeft</item>
        <item name="android:layout_marginRight">@dimen/bottombar_info_marginRight</item>
    </style>

    <style name="Widget.SeekBar" parent="android:Widget.SeekBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_horizontal</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_horizontal</item>
        <item name="android:minHeight">5dip</item>
        <item name="android:maxHeight">8dip</item>
        <item name="android:thumb">@drawable/playback_seek_thumb</item>
        <item name="android:thumbOffset">8dip</item>
        <item name="android:focusable">true</item>
    </style>
    
    
   <style name="my.Widget.ListView" parent="android:Widget.ListView">
        <item name="android:background">#000</item>
        <item name="android:cacheColorHint">@null</item>
        <item name="android:divider">#00000000</item>
        <item name="android:listSelector">#00000000</item>
    </style>

</resources>